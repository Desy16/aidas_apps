{% extends 'base.html.twig' %}

{% block title %} {{ title }} {% endblock %}

{% block body %}
	
    <div class="jumbotron">
        <div class="container mt-4">
            <div class="row">
                <div class="col-md-4">
                    <h2>{{ association.nom }}</h2>
                    <h3>{{ association.commune }} ({{ association.codePostal}})</h3>
                    <a href="#" class="btn btn-primary">Contacter l'association</a>
                </div>
            </div>
	    </div>

        <div id="contactForm" class="mt-4">
            {{ form_start(form) }}
                <div class="row">
                    <div class="col">{{ form_row(form.nom) }}</div>
                    <div class="col">{{ form_row(form.prenom) }}</div>
                </div>
                <div class="row">
                    <div class="col">{{ form_row(form.tel) }}</div>
                    <div class="col">{{ form_row(form.email) }}</div>
                </div>
            {{ form_rest(form) }}
            <div class="form-group">
                <button class="btn btn-primary">Envoyer</button>
            </div>
            {{ form_end(form) }}
            </div>
	    </div>
    </div>

{% endblock %}